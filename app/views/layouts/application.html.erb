<!DOCTYPE html>
<html>
<head>
  <title>CDNstocktalk</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav class="navbar-default navbar-fixed-top">
		<div class="container-fluid">
			<div class="navbar-header">
				<%= link_to "Canadian Stock Talk", root_path, class: "navbar-brand" %>
			</div>
			<ul class="nav navbar-nav">
			<% if user_signed_in? %>
					<h8><li>Hello, <%= link_to current_user.username, user_path(id: current_user) %></li></h8>
					<li><%= link_to "Share a Stock Idea", new_post_path, class: "btn-sm btn-default" %></li>
			<% end %>
			</ul>
			<ul class="col-md-4 col-md-offset-2 center">
			<%= form_tag search_posts_path, method: :get, class: "navbar-form", role: "search" do %>
				<p>
					<%= text_field_tag :search, params[:search], class: "form-control navbar-center" %>
					<%= submit_tag "Search", name: nil, class: "btn btn-default" %>
				</p>
			<% end %>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<% if user_signed_in? %>
					<h8><li>Email: <%= current_user.email %></li></h8>
					<li><%= link_to "View Profile", user_path(id: current_user), class: "btn-sm btn-default" %></li>
					<li><%= link_to "Sign Out", destroy_user_session_path, class: "btn-sm btn-default", method: :delete %></li>
				<% else %>	
					<li><%= link_to "Log In", new_user_session_path, class: "btn btn-default" %></li>
					<li><%= link_to "Sign Up", new_user_registration_path, class: "btn btn-default" %></li>
				<% end %>
			</ul>
		</div>
	</nav>

	<p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

<div class="container">
	<%= yield %>
</div>

</body>
</html>
